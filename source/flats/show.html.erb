<% flat = data.flats[owner_name] %>
<div class="banner" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path(flat.picture) %>);height:30vh;background-position:center;">
</div>
<div id="wrapper-flat">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div id="user-profile">
          <div id="user-profile-avatar" class="text-center">
            <%= image_tag flat.avatar, class: "img-circle" %>
            <p><%= owner_name %></p>
          </div>
          <div id="user-profile-infos">
            <h2><%= flat.summary %></h2>
            <p><%= flat.city %></p>
            <p>
              <% (1..5).each do |star| %>
                <i class="fa fa-star <%= star <= flat.rating ? 'star-enable':'star-disable' %>"></i>
              <% end %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="" id="flat-form">
          <h2>Book this flat</h2>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" placeholder="checkin" class="form-control">
              </div>
              <div class="col-xs-6">
                <input type="text" placeholder="checkout" class="form-control">
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-12">
                <select name="" id="" class="form-control">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                </select>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-12">
                <input type="submit" class="btn btn-danger btn-block">
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
